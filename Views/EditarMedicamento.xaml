<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MedicacaoDiariaApp.Views.EditarMedicamento"
             
             Title="Editar Medicamento">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Salvar" Clicked="ToolbarItem_Clicked"/>
    </ContentPage.ToolbarItems>
        
    <VerticalStackLayout Spacing="10" Padding="10">
        <Label Text="Nome do Medicamento:" />
        <Entry x:Name="txt_nome" Text="{Binding Nome}" />

        <Label Text="Indicação do Medicamento:" />
        <Entry x:Name="txt_indicacao" Text="{Binding Indicacao}" />

    </VerticalStackLayout>
</ContentPage>